{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Cloudant Data Processing with OpenWhisk deployment to Bluemix",
  "description": "cloudant data processing with OpenWhisk",
  "type": "object",
  "properties": {
    "deploy-region": {
      "description": "Deploy to this Bluemix Region",
      "type": "string"
    },
    "deploy-org": {
      "description": "Deploy to this Bluemix Organization",
      "type": "string"
    },
    "deploy-space": {
      "description": "Deploy to this space",
      "type": "string"
    }
  },
  "required": [
    "deploy-region",
    "deploy-org",
    "deploy-space"
  ],
  "form": [
    {
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
    },
    {
      "type": "table",
      "columnCount": 4,
      "widths": [
        "15%",
        "28%",
        "28%",
        "28%"
      ],
      "items": [
        {
          "type": "label",
          "title": ""
        },
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "label",
          "title": "Deploy to"
        },
        {
          "type": "select",
          "key": "deploy-region"
        },
        {
          "type": "select",
          "key": "deploy-org"
        },
        {
          "type": "select",
          "key": "deploy-space",
          "readonly": false
        }
      ]
    }
  ]
}